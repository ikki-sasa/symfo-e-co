{% extends "base.html.twig" %}
{# {% form_theme formView 'bootstrap_5_layout.html.twig' %} #}

{% block title %}Création d'un produit{% endblock %}

{% block body %}
<h1>Nouveau Produit</h1>

{{ form_start(formView) }}

<div class="row">
    <div class="col">
        {{ form_row(formView.name) }}
        {{ form_row(formView.price) }}
    </div>
    <div class="col">
        {{ form_row(formView.mainPicture) }}
        {{ form_row(formView.category) }}
        {{ form_row(formView.shortDescription) }}
    </div>
</div>
<button class="btn btn-primary">
    Créer le produit
</button>

{{ form_end(formView) }}

{% endblock %}