{% extends "base.html.twig" %}

{% block title %}
Edition de {{ product.name}}
{% endblock %}

{% block body %}
<h1>Editer produit {{ product.name }}</h1>
{{ form_start(formView, {'attr': {'novalidate': 'novalidate'}}) }}

<div class="row">
    <div class="col">
        {{ form_row(formView.name) }}
        {{ form_row(formView.price) }}
    </div>
    <div class="col">
        {{ form_row(formView.mainPicture) }}
        {{ form_row(formView.category) }}
        {{ form_row(formView.shortDescription) }}
    </div>
</div>
<button class="btn btn-primary">
    Modifier le produit
</button>

{{ form_end(formView) }}
{% endblock %}