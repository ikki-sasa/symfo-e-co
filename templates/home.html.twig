{% block body %}
<h1>Nos produits</h1>
<div class="row">
    {% for p in products %}
    <div class="col">
        <div class="card">
            {# <img src="/public/Img/Products-section1/Framboise1.jpg" alt="Image du produit ganache framboise" #} <img
                src="{{ p.mainPicture }}" alt="Image du produit ganache framboise" class="img-fluid">
            <div class="card-body">
                {# <h4 class="card-title">L'amoureux noir</h4> #}
                <h4 class="card-title">{{ p.name }} ({{ p.price / 100 }} &euro;) </h4>

                <span class="badge bg-info">
                    {{ p.category.name }}
                </span>

                <p>{{ p.shortDescription }}</p>
                <a href="#" class="btn btn-primary btn-sm">Détails</a>
                <a href="#" class="btn btn-success btn-sm">Nos chocolats</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
